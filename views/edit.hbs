<div class="ani-separator-2"></div>

<div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2 xl6 offset-xl3">
        <h1 class="ani-attacher-1">Edit</h1>
    </div>
</div>

<form id="ani-form-edit" action="/api/edit-story_{{aniId}}&{{story.id}}?_method=PATCH" method="POST">
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2 xl6 offset-xl3">
            <div class="card">
                <div class="card-content">
                    <div class="input-field">
                        <label for="ani-title" class="blue-grey-text text-darken-2">Title</label>
                        <input type="text" name="title" id="ani-title" class="validate" value="{{story.title}}" required>
                    </div>
                </div>
            </div>

            <div class="ani-separator-3"></div>

            {{#each story.photos}}
            <div class="card">
                <div class="card-image ani-card">
                    <img src="{{this.url}}">
                </div>

                <div class="card-content">
                    <div class="input-field">
                        <label for="ani-caption{{@index}}" class="blue-grey-text text-darken-2">Caption</label>
                        <input type="text" name="captions[{{@index}}]" id="ani-caption{{@index}}" class="validate" value="{{this.caption}}" required>
                        <input type="hidden" name="ids[{{@index}}]" value="{{this.id}}">
                    </div>
                </div>
            </div>

            <div class="ani-separator-3"></div>
            {{/each}}

            <button type="submit" class="btn-large waves-effect waves-light" title="Click to publish.">Publish</button>

            <div class="ani-separator-2"></div>
        </div>
    </div>
</form>

<form action="/api/delete-story_{{aniId}}&{{story.id}}?_method=DELETE" method="POST">
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2 xl6 offset-xl3">
            <button type="submit" class="btn-large waves-effect waves-light red darken-2" title="Click to delete your Pet's story.">Delete your dog's story</button>
        </div>
    </div>

    <div class="ani-separator-3"></div>
</form>